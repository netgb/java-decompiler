<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" onKeyPressed="#onKeyPressed">
	<center>
		<WebView fx:id="contentView" />
	</center>
	<bottom>
		<GridPane fx:id="searchBar">
			<children>
				<TextField fx:id="searchText" GridPane.columnIndex="0" GridPane.rowIndex="0" />
				<Button text="Search" GridPane.columnIndex="1" GridPane.rowIndex="0" />
			</children>

			<columnConstraints>
				<ColumnConstraints hgrow="ALWAYS" />
			</columnConstraints>
		</GridPane>
	</bottom>
</BorderPane>

